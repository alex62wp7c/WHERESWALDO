<% mywhere = Mapping.new %>
<% mywaldo = mywhere.playGame%>
<!doctype html>
<html>
  <head>
    <title>Sinatra Single-Serve</title>
    <link href="css/bootstrap.css" rel="stylesheet" type="text/css"/>
    <style>
      h1 {
        font-style: bold;
        text-align: center;
      }
      div {
        width: 1024px;
        height: 768px;
        position:absolute;
        left: 0;
        right: 0;
        margin: auto;
        background-image: url("img/waldos/<%= mywaldo[0]%>") ;
      }
      #waldo {
        position:absolute;
        top: <%= mywaldo[2]%>;
        left: <%= mywaldo[1]%>;
        padding: <%= mywaldo[3]%> <%= mywaldo[4]%>;

      }
    </style>
    <script language="javascript" src="js/script.js" type="text/javascript"></script>
  </head>
  <body>
    <%= yield %> 
    <div>
      <span id="waldo">
        <a href="javascript:void(0);" id="clear">[]</a>
      </span>
    </div>
  </body>
</html>